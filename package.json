{
  "name": "mutual-finder",
  "version": "1.1.0",
  "main": "./electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "electron:start": "set DEV=TRUE && electron electron/main.js",
    "electron:build": "electron-builder --dir -w",
    "electron:test": "yarn build && electron-builder -w",
    "electron:publish": "yarn build && electron-builder -p always -w"
  },
  "build": {
    "appId": "mutual-finder",
    "productName": "Mutual Finder",
    "directories": {
      "output": "build"
    },
    "win": {
      "icon": "src/assets/icon.ico"
    },
    "linux": {
      "icon": "src/assets/icon.ico"
    },
    "files": [
      "electron/*.js",
      "src/assets/icon.ico",
      {
        "from": "dist",
        "to": "./"
      }
    ]
  },
  "publish": {
    "provider": "github"
  },
  "dependencies": {
    "axios": "^0.21.4",
    "electron-updater": "^4.3.9"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^1.9.0",
    "electron": "^15.0.0",
    "electron-builder": "^22.11.7",
    "typescript": "^4.4.3",
    "vite": "^2.5.10",
    "vue-tsc": "^0.3.0",
    "vue": "^3.2.19",
    "vue-router": "^4.0.11",
    "vuex": "^4.0.2",
    "vuex-persistedstate": "^4.1.0",
    "postcss": "^8.3.8",
    "tailwindcss": "^2.2.15",
    "autoprefixer": "^10.3.6"
  }
}
